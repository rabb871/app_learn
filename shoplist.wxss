/* pages/shoplist/shoplist.wxss */
.shop-item {
  display: flex;
  padding: 30rpx;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  margin: 20rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.thumb image {
  width: 250rpx;
  height: 250rpx;
  display: block;
  margin-right: 15rpx;
  border-radius: 15rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
  color: rgb(117, 114, 114);
}

.shop-title {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(43, 42, 42);
}