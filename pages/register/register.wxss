/* pages/register/register.wxss */
.register-title{
  position: relative;
  top: 0;
  margin: auto;
  font-weight: 600;
  letter-spacing: 8rpx;
  font-size: 70rpx;
  color: #434d43;
  display: flex;
  justify-content: center;
  padding-bottom: 10rpx;
  background-color: #f3e4b2;
}

